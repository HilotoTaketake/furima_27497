<li class='list'>
  <% @item.each do |item| %>
  <%= link_to '#' do %>
  <%= image_tag item.image.variant(resize: '240x240') if item.image.present? %>
  <% if @item == 0 %>
  <div class='sold-out'> 
      <span>Sold Out!!</span> 
  </div>
  <% end %>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.name %>
    </h3>
    <div class='item-price'>
      <span><%= item.price %><br>(税込み)</span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</li>